{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "skipLibCheck": true,
      "preserveWatchOutput": true,
    },
    "ts-node": {
      "esm": true
  },
  }
  